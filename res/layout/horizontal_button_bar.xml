<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button_bar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:orientation="horizontal" >

    <Button
        android:id="@android:id/button1"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/dialog_button_min_width"
        android:padding="@dimen/dialog_button_padding"
        android:textColor="?attr/colorAccent"
        android:textSize="@dimen/dialog_button_text_size"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@android:id/button2"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_button_spacing"
        android:layout_marginStart="@dimen/dialog_button_spacing"
        android:minWidth="@dimen/dialog_button_min_width"
        android:padding="@dimen/dialog_button_padding"
        android:textColor="?attr/colorAccent"
        android:textSize="@dimen/dialog_button_text_size"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@android:id/button3"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_button_spacing"
        android:layout_marginStart="@dimen/dialog_button_spacing"
        android:minWidth="@dimen/dialog_button_min_width"
        android:padding="@dimen/dialog_button_padding"
        android:textColor="?attr/colorAccent"
        android:textSize="@dimen/dialog_button_text_size"
        android:textStyle="bold"
        android:visibility="gone" />

</LinearLayout>